# PandaDoc API Configuration
PANDADOC_API_KEY=your_actual_api_key_here

# Google Sheets OAuth Configuration (optional)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_PROJECT_ID=your_google_project_id_here
GOOGLE_REDIRECT_URI=http://localhost:8080
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here
GOOGLE_SHEETS_RANGE=NDA_Log!A:G

# Email Notifications (optional)
NOTIFICATION_EMAIL=your_email@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# Agent Configuration
AGENT_NAME=NDA Agent
AGENT_DESCRIPTION=AI agent for NDA document management
DEBUG_MODE=False
VERBOSE_LOGGING=False

# Setup Instructions:
# 1. PandaDoc API: Get your API key from https://developers.pandadoc.com/reference/authorization
# 2. Google Sheets OAuth: 
#    - Go to https://console.cloud.google.com
#    - Create a new project or select existing
#    - Enable Google Sheets API
#    - Create OAuth 2.0 credentials
#    - Add http://localhost:8080 as redirect URI
# 3. Gmail SMTP: Use app passwords if using Gmail
